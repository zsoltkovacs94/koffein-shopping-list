<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <AutoCompleteTextView
        android:id="@+id/edit_termeknev"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Terméknév"
        android:inputType="text"
        android:completionThreshold="1"
        />


    <EditText
        android:id="@+id/edit_mennyiseg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/addFavButton"
        android:layout_alignParentStart="true"
        android:hint="Mennyiség"
        android:inputType="number"
        />


    <EditText
        android:id="@+id/edit_mertekegyseg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/edit_mennyiseg"
        android:hint="Mértékegység"
        android:inputType="text"
        />

    <Button
        android:id="@+id/addFavButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/edit_termeknev"
        android:text="Kedvenc" />


</RelativeLayout>
